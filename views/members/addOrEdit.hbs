<h3>{{viewTitle}}</h3>

<form action="/members" method="POST" autocomplete="off">{{!--we will use an action attribute here we provide a url inside to handle post data--}}
<input type="hidden" name="id" value="{{members._id}}">
<input type="hidden" name="userId" value="{{members.userId}}">
    <div class="form-group">
      <label>First Name</label>
      <input type="text" class="form-control" name="first_name" placeholder="First Name" value="{{members.first_name}}">
    </div>
    <div class="form-group">
      <label>Last Name</label>
      <input type="text" class="form-control" name="last_name" placeholder="Last Name" value="{{members.last_name}}">
    </div>
    <div class="form-group">
      <label>Gender</label>
      <input type="text" class="form-control" name="gender" placeholder="Gender" value="{{members.gender}}">
    </div>
    <div class="form-group">
      <label>Email</label>
      <input type="text" class="form-control" name="email" placeholder="Email" value="{{members.email}}">
    </div>
    <div class="form-group">
      <label>IP address</label>
      <input type="text" class="form-control" name="ip_address" placeholder="IP address" value="{{members.ip_address}}">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
      <a class="btn btn-secondary" href="/members/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>
